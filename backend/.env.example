APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
# Use the URL and port where Laravel is reachable (required for redirects after login, emails, etc.)
# Docker: http://localhost:8201   |   php artisan serve: http://localhost:8000
APP_URL=http://localhost:8201

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Local (SQLite). For Docker: use mysql and match docker-compose service name.
DB_CONNECTION=sqlite
# SQLite path (relative to project root); default in code: database/database.sqlite
DB_DATABASE=database/database.sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# Docker (uncomment when running backend in Docker or pointing at Docker MySQL):
# DB_CONNECTION=mysql
# DB_HOST=mysql
# DB_PORT=3306
# DB_DATABASE=vibecode-full-stack-starter-kit_app
# DB_USERNAME=root
# DB_PASSWORD=vibecode-full-stack-starter-kit_mysql_pass

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
# Use "public" for tool images so they are served from /storage (run: php artisan storage:link)
MEDIA_DISK=public
QUEUE_CONNECTION=database

CACHE_STORE=file
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Sanctum: allow frontend on 8200 to receive stateful auth cookies
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,localhost:8200,127.0.0.1,127.0.0.1:8000,127.0.0.1:8200,::1
